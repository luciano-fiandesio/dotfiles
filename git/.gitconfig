[include]
 path = ~/.gitconfig.local

[credential]
  helper = cache --timeout=3600
[core]
  abbrev = 12
  quotepath = false
  untrackedcache = true
  #whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim
  excludesfile = ~/.config/git/ignore
  attributesFile = ~/.config/git/info/attributes
  hooksPath = ~/.config/git/hooks
  pager = diff-so-fancy | less --tabs=4 -RFX
  autocrlf = input
[color]
  ui = true
  pager = true
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = 227
  commit = 227 bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[commit]
  template = ~/.config/git/commit_message.txt
	gpgSign = true
[interactive]
  singleKey = true
[status]
  showUntrackedFiles = all
[fetch]
  prune = true
[pull]
  rebase = true
[push]
  default = simple
  followTags = true
[branch]
  autoSetupRebase = always
[rebase]
  abbreviateCommands = true
  autoSquash = true
  autoStash = true
[rerere]
  enabled = true
  autoUpdate = true
[grep]
  lineNumber = true
  fullname = true
  threads = 3
[diff]
  indentHeuristic = true
  mnemonicPrefix = true
  renames = copies
  tool = Kaleidoscope
[diff "exif"]
  textconv = exiftool
[difftool]
  prompt = false
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
  ff = only
  conflictStyle = diff3
  tool = Kaleidoscope
[mergetool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
[tag]
  sort = version:refname
[transfer]
  fsckobjects = true
[url "https://github.com/"]
  insteadOf = gh:
[url "https://github.com/bkuhlmann/"]
  insteadOf = bk:
[url "https://git.heroku.com"]
  insteadOf = heroku:
[remote "origin"]
  fetch = +refs/pull/*/head:refs/remotes/pull_requests/*
[include]
  path = /Users/luciano/.gitalias.txt
[alias]
  s = status -sb
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[filesystem "Oracle Corporation|1.8.0_221|/dev/disk1s1"]
	timestampResolution = 1001 milliseconds
	minRacyThreshold = 0 nanoseconds
[filesystem "AdoptOpenJDK|12.0.2|/dev/disk1s1"]
	timestampResolution = 12000 nanoseconds
	minRacyThreshold = 0 nanoseconds
