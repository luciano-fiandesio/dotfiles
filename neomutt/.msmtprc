defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Fastmail 
account        fastmail
host           smtp.fastmail.com
port           465
from           lfi@fastmail.fm 
user           lfi@fastmail.fm
tls_starttls   off
passwordeval "gpg -q --for-your-eyes-only --no-tty --exit-on-status-write-error --pinentry-mode loopback  --passphrase-file /home/luciano/pass.txt -d /home/luciano/fastmail.fm.gpg"

account default : fastmail
